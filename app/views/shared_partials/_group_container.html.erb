
    <div class="card">
      <div class="card-header ch-alt m-b-20">
        <h2>Groups<small>Community groups</small></h2>
        <ul class="actions">
            <li class="dropdown">
                <a href="<%= new_group_path %>">
                    <i class="md  md-add"></i>
                </a>
            </li>
        </ul>
      </div>
      <div class="card-body">
        <div class="listview">
        <% @groups.each do |group| %>
          <a class="lv-item">
            <div class="media">
              <div class="pull-left">
              <%= image_tag group.avatar, class: "lv-img-sm" %>
              </div>
              <div class="media-body">
                <div class="lv-title"><%= group.creator.name %></div>
                <small class="lv-small"><%=group.name %></small>
              </div>
            </div>
          </a>
        <%end%>
        </div>
      </div>
    </div>



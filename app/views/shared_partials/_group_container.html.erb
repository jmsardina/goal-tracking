
<div class="card group-container container-height" style="height: 350px;">
  <div class="card-header">
    <h2>Groups<small>Community groups</small></h2>
    <ul class="actions">
      <li class="dropdown">
        <a href="<%= new_group_path %>">
          <i class="md  md-add"></i>
        </a>
      </li>
    </ul>
  </div>
  <div class="card-body card-height scrollable">
    <div class="listview">
      <% @groups.each do |group| %>
      <a class="lv-item" href="<%= group_path(group)%>">
        <div class="media">
          <div class="media-body">
            <div class="lv-title"><%= group.creator.name %></div>
            <small class="lv-small"><%=group.name %></small>
          </div>
        </a>
      </div>
    </a>
    <%end%>
  </div>
</div>




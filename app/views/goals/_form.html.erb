<%= form_for(@goal) do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div><br>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :due_date, "Date to be completed by"%>
    <%= f.date_field :due_date %>
  </div>

  <div class="field">
    <%= f.label :potential_barrier, "Potential Barriers"%><br>
    <%= f.text_area :potential_barrier %>
  </div><br>

  <div class="field">
    <%= f.label :coping_strategy, "Coping Strategies"%><br>
    <%= f.text_area :coping_strategy %>
  </div><br>

  <div class="field">
    <%= f.label :support, "Support"%><br>
    <%= f.text_area :support %>
  </div><br>
  <%= f.submit %>
<% end %>

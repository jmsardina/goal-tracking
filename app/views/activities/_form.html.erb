  <%= form_for(@activity, url: goal_activities_path(@goal), id: "new-activity") do |f| %>

  <% if @activity.errors.any? %>
  <div class="card" id="error_explanation">
    <div class="alert alert-warning" role="alert">
      <h2><%= pluralize(@activity.errors.count, "error") %> prohibited this activity from being saved:</h2>
      <p>
        <ul>
          <% @activity.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
        </ul>
      </p>
    </div>
    <% end %>
  </div>

<div class="card">
  <div class="card-header">
    <h2>Add an Activity</h2>
  </div>
  <div class="card-body card-padding">
    <div class="fg-line">
      <p class="c-black f-500 m-b-20">
        <%= f.label :description %><br>
        <%= f.text_field :description, class: "form-control input-lg", placeholder: "Name of the activity...", autofocus: true %>
      </p>

    </div>
    <label>How often will you do this activity?</label>
    <div class="row">
      <div class="col-sm-2">
        <%= f.select :frequency, options_for_select((1..12)) %>
        <%= f.label :frequency, "times"%>
      </div>
      <div class="col-sm-4">
        <%= f.label :period, "every"%>
        <%= f.select :period, options_for_select(["day", "week", "month", "year"]) %>
      </div>
    </div>
    <div class="fg-line">
      <%= f.label :barrier, "Challenge"%>
      <%= f.select :barrier, options_for_select(["Lack of time", "Lack of Support", "I forget", "I don't like to do it", "I'm not sure yet", "I want to code instead!!", "Other"]) %>
    </div>

    <div class="fg-line">
      <%= f.label :facilitator, "How will you cope with this challenge?"%>
      <%#= f.text_area :facilitator %>
      <%= f.select :facilitator, options_for_select(["I will set my alarm", "I will ask a friend to help me", "Other"]) %>
    </div>

    <%= f.submit "Create Activity", class: "btn btn-primary btn-sm m-t-1" %>
    <% end %>
  </div>
</div>